<odoo>
    <record id="product_template_hide_procure_replenish" model="ir.ui.view">
        <field name="name">product.template.procurement.hide.replenish</field>
        <field name="model">product.template</field>
        <field name="groups_id" eval="[(4, ref('a1_sale_location.group_inventory_sales_admin'))]"/>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='%(stock.action_product_replenish)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_product_replenish_custom" model="ir.ui.view">
        <field name="name">product.replenish.view.custom</field>
        <field name="model">product.replenish</field>
        <field name="inherit_id" ref="stock.view_product_replenish"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='warehouse_id']" position="attributes">
                <attribute name="string">Transfer to</attribute>
            </xpath>
            <xpath expr="//field[@name='route_ids']" position="attributes">
                <attribute name="string">Transfer from</attribute>
            </xpath>
        </field>
    </record>
</odoo>
