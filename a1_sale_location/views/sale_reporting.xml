<odoo>
    <record id="view_sale_report_tree_custom" model="ir.ui.view">
        <field name="name">sale.report.tree.custom</field>
        <field name="model">sale.report</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="bottom" create="false" edit="true">
                <field name="order_id" string="SO Number" optional="show"/>
                <field name="date" string="Order Date" optional="show"/>
                <field name="state" string="Status" optional="show"/>
                <field name="team_id" string="Sales Team" optional="show"/>
                <field name="user_id" string="Salesperson" optional="show"/>
                <field name="company_id" string="Company" optional="show"/>

                <!-- Thông tin khách hàng và kho -->
                <field name="partner_id" string="Customer" optional="show"/>
                <field name="warehouse_id" string="Warehouse" optional="show"/>

                <!-- Thông tin sản phẩm -->
                <field name="product_id" string="Product" optional="show"/>
                <field name="product_uom" string="UoM" optional="show"/>
                <field name="categ_id" string="Product Category" optional="show"/>

                <!-- Số lượng và tài chính -->
                <field name="product_uom_qty" string="Qty Ordered" optional="show"/>
                <field name="qty_delivered" string="Qty Delivered" optional="show"/>
                <field name="qty_invoiced" string="Qty Invoiced" optional="show"/>
                <field name="price_total" string="Subtotal" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="sale_enterprise.sale_report_action_dashboard" model="ir.actions.act_window">
        <field name="view_mode">dashboard,tree,pivot,graph</field>
    </record>

    <record id="sale_report_action_dashboard_tree_custom" model="ir.actions.act_window.view">
        <field name="sequence" eval="4"/> <!-- sequence thấp hơn pivot/graph để tree ưu tiên -->
        <field name="view_mode">tree</field>
        <field name="view_id" ref="a1_sale_location.view_sale_report_tree_custom"/>
        <field name="act_window_id" ref="sale_enterprise.sale_report_action_dashboard"/>
    </record>

</odoo>