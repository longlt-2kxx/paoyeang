<odoo>
    <record id="view_clone_access_wizard_form" model="ir.ui.view">
        <field name="name">clone.access.wizard.form</field>
        <field name="model">clone.access.wizard</field>
        <field name="arch" type="xml">
            <form string="Clone Access Rights">
                <group>
                    <field name="group_from_id"/>
                    <field name="group_to_id"/>
                </group>
                <footer>
                    <button name="action_clone_access" type="object" string="Clone Now" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_clone_access_wizard" model="ir.actions.act_window">
        <field name="name">Clone Access Rights</field>
        <field name="res_model">clone.access.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="view_groups_form_inherit_clone" model="ir.ui.view">
        <field name="name">res.groups.clone.access.button</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <button name="%(action_clone_access_wizard)d"
                        string="Clone Access"
                        type="action"
                        class="oe_highlight"
                        context="{'default_group_to_id': active_id}"
                        groups="base.group_system"/>
            </xpath>
        </field>
    </record>
</odoo>
